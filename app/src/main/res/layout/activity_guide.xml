<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/blur_toolbar_top"
    tools:context=".view.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/guide_lay_circle_point_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_btn_skip"
        android:layout_marginBottom="@dimen/len_24"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill_all" />

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill" />

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill" />

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill" />

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill" />

        <View
            android:layout_width="@dimen/len_4"
            android:layout_height="@dimen/len_4"
            android:layout_margin="@dimen/len_4"
            android:background="@drawable/ic_guide_view_bg_fill" />
    </LinearLayout>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/guide_btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_36"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/len_24"
        android:background="@color/purple_500"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16"
        android:paddingTop="0dp"
        android:text="@string/btn_guide_skip"
        android:textColor="@color/white_alpha_224"
        android:visibility="invisible"
        app:gTouchCornerRadius="0dp"
        app:gTouchEffect="ripple" />
</RelativeLayout>
